<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MaiChart2SimaiChart.Gui.Pages.ExportChartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MaiChart2SimaiChart.Gui.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            x:Name="PageHeader"
            Margin="36,24,36,0"
            Style="{StaticResource TitleTextBlockStyle}"
            Text="Export Charts" />
        <ScrollViewer 
            Grid.Row="1"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled"
            ZoomMode="Disabled">
            <StackPanel 
                Orientation="Vertical"
                Spacing="16"
                Margin="36,10,36,36">
                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox 
                        x:Name="A000PathTextBox"
                        Grid.Column="0"
                        Header="MaimaiDX A000 Path" 
                        PlaceholderText="Input the path" 
                        TextChanged="A000PathTextBox_OnTextChanged" 
                        MaxHeight="80"/>

                    <Button 
                        Grid.Column="1"
                        VerticalAlignment="Bottom"
                        Content="Choose Folder"
                        Click="A000PathChooseFolderButton_OnClick" />
                </Grid>
                
                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox 
                        x:Name="OutputPathTextBox"
                        Grid.Column="0"
                        Header="Output Path" 
                        PlaceholderText="Input the path" 
                        TextChanged="OutputPathTextBox_OnTextChanged" 
                        MaxHeight="80"/>

                    <Button 
                        Grid.Column="1"
                        VerticalAlignment="Bottom"
                        Content="Choose Folder"
                        Click="OutputPathChooseFolderButton_OnClick" />
                </Grid>
                
                <controls:SettingsCard
                    Header="StrictDecimal"
                    Description="Force output chart to have levels rated by decimal"
                    HeaderIcon="{ui:FontIcon Glyph=&#xE799;}">
                    <ToggleSwitch IsOn="{x:Bind _strictDecimal}" />
                </controls:SettingsCard>
                
                <controls:SettingsCard
                    Header="Genre"
                    Description="The preferred categorizing scheme"
                    HeaderIcon="{ui:FontIcon Glyph=&#xE71C;}">
                    <ComboBox x:Name="TrackCategorizeMethodComboBox" ItemsSource="{x:Bind _trackCategorizeMethodSet}" SelectedIndex="0"/>
                </controls:SettingsCard>
                
                <controls:SettingsCard
                    Header="Number Folder Name Format"
                    Description="Use musicID as folder name instead of sort name"
                    HeaderIcon="{ui:FontIcon Glyph=&#xE8B7;}">
                    <ToggleSwitch IsOn="{x:Bind _number}" />
                </controls:SettingsCard>
                
                <controls:SettingsCard
                    Header="Export Threads"
                    Description="Number of threads to use for compiling, default is 1"
                    HeaderIcon="{ui:FontIcon Glyph=&#xEC4A;}">
                    <ComboBox x:Name="ThreadsNumberComboBox" ItemsSource="{x:Bind _supportThreadsNumber}" SelectedIndex="0"/>
                </controls:SettingsCard>
                
                <Grid
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button 
                        x:Name="ExportButton"
                        Content="Click ME to Exports!" 
                        Height="40"
                        Click="ExportButton_OnClick"/>
                </Grid>
                
                <Grid 
                    x:Name="ExportProgressPanel"
                    Visibility="Collapsed"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="300">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ProgressBar 
                            x:Name="ProgressBar"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Height="15"
                            Grid.Column="0"
                            Value="{x:Bind ProgressValue, Mode=OneWay}"/>
                        
                        <TextBlock 
                            x:Name="ProgressPercentText"
                            Text="{x:Bind ProgressPercent, Mode=OneWay}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="8,0,0,0"
                            Grid.Column="1"
                            FontSize="12"/>

                        <TextBlock 
                            x:Name="ProgressCountText"
                            Text="{x:Bind ProgressCount, Mode=OneWay}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="8,0,0,0"
                            Grid.Column="2"
                            FontSize="12"/>
                    </Grid>
                    <Button 
                        Content="Stop Export"
                        HorizontalAlignment="Center"
                        Grid.Row="1"
                        Margin="0,10,0,0"
                        Height="40"
                        Click="StopExport"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
